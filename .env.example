# KuCoin API credentials
KUCOIN_API_KEY=your_api_key_here
KUCOIN_API_SECRET=your_api_secret_here
KUCOIN_API_PASSPHRASE=your_passphrase_here

# Trading configuration
TRADING_PAIRS=BTC-USDT,ETH-USDT
BASE_ORDER_SIZE=100
MAX_POSITION_SIZE=1000
MAX_DAILY_TRADES=50

# Auto-selection of best trading pairs
# When enabled, the bot will automatically scan and select pairs with strongest signals
AUTO_SELECT_PAIRS=false
AUTO_SELECT_COUNT=5
AUTO_SELECT_INTERVAL=3600
AUTO_SELECT_MIN_VOLUME=100000
AUTO_SELECT_MIN_SIGNAL=0.5
AUTO_SELECT_SIGNAL_TYPE=any

# Risk management
MAX_DRAWDOWN_PERCENT=5.0
STOP_LOSS_PERCENT=2.0
TAKE_PROFIT_PERCENT=3.0
MAX_OPEN_POSITIONS=5

# Strategy settings
STRATEGY_NAME=momentum
RSI_PERIOD=14
RSI_OVERBOUGHT=70
RSI_OVERSOLD=30
EMA_SHORT_PERIOD=9
EMA_LONG_PERIOD=21

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Environment
ENVIRONMENT=sandbox
USE_SANDBOX=true
